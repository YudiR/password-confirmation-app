<h1>News#new</h1>

<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |m| %>
            <li> <%= m %> </li>
        <% end %>
    </ul>
<%end%>
<%= form_for @user, :url => news_index_path do |f| %>
    <%=f.label :name %>
    <%=f.text_field :name %>

    <%=f.label :email %>
    <%=f.email_field :email %>

    <%=f.label :password %>
    <%=f.password_field :password %>

    <%=f.label :password_confirmation %>
    <%=f.password_field :password_confirmation%>
    
    <%= f.submit 'create' %>
<% end %>